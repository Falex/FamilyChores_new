<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>miPango</title>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= javascript_include_tag :defaults, 'tooltip' %>
	
	<%= yield(:head) %>
	
</head> 
<body>
  <% if current_user %>
		<% content_for(:body) do %>
			<div class="logout">
					<%= link_to 'Logout', :controller =>  'user_sessions', :action => 'logout' %>
			</div>
		<% end %>
	<div class="nav">
		<ul>
			<li id="verwaltung">
				<% if @current_user.roles == "admin" %>
					<%= link_to image_tag("Verwaltung_light.png", :mouseover => "Verwaltung_dark.png" ,:border=>0), calendar_configurations_path(@current_user.fam.calendar.id) %> 
				<% end %>
			</li>
			<li>
				<%= link_to image_tag("Profilgirl_light.png", :clicked => "Profilgirl_dark.png", :mouseover =>"Profilgirl_dark.png", :border=>0), account_path %> 
			</li>
			<li>
				<%= link_to image_tag("Ranking_light.png", :mouseover => "Ranking_dark.png", :border=>0), :controller =>'rankings', :action =>'index' %>
			</li>
			<li>
				<%= link_to image_tag("Kalender_light.png", :mouseover => "Kalender_dark.png", :border=>0), :controller =>'calendars', :action =>'index' %>
			</li>
			<li>
				<%= yield(:nav) %>
			</li>
			<%= @message %>
		</ul>
	</div>
	<div id="wrapper">
		<p id="notice" ><%= flash[:notice] %></p>
		<%= yield %>
		<%= yield(:body) %>  
	</div>
  <% else %>
		<div id="wrapper" %>
			<div class="register">
					<%= link_to 'Login', :controller =>  'user_sessions', :action => 'new' %> | 
					<%= link_to 'Sign up', :controller =>  'users', :action => 'new' %>
				</div>
				<%= yield(:login) %>
				<div class="maskottchen">
					<%= image_tag('Maskottchen.png') %>
				</div>
			</div>
		</div>
  <% end %>
	


<!--<div class="footer">&copy;2010 by Alexandra F. & Natascha H.</div>-->
</body>
</html>

