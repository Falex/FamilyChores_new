<% content_for(:body) do %>

<h1>Ranking</h1>

<div id="ranking">
	<% place = 1 %>
	<div class="leine">
		<%= image_tag("../images/Ranking/Leine.png") %>
	</div>
	<% @rankings.each do |member| %>
		<div id="member">
			<h3>
				<%=h member.login %>
				<% if !member.entire_stars_count.nil? %>
					<%=h member.entire_stars_count %>
				<% end %>
			</h3>
			<div class = '<%= member.color %>'>
				<%= render 'shared/profile_image', {:user => member} %>
			</div>
			<div class="award">
				<h2><%= place %></h2>
				<% if place < 4 %>
					<%= image_tag("../images/Ranking/#{place}Platz.png") %>
				<% else %>
					<%= image_tag("../images/Ranking/Abvier.png") %>
				<% end %>
			</div>
			<% place = place + 1 %>
		</div>
	<% end %>
</div>

<div class="pillar"></div>
<div class="kitty2">
<%= image_tag('../images/Ranking/Kitty2.png') %>
</div>
<% end %>



