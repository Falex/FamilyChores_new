		SUMMARY: <%= event.chore.title + " " + event.user.login %>
		DTSTART;VALUE=DATE:20100610
		DTEND;VALUE=DATE:20100611
		CATEGORIES:Family
		DESCRIPTION: <%= event.description %>
		ATTENDEE;CN= Paul;
		SEQUENCE:0
		END:VEVENT 
	<% end %>
		
END:VCALENDAR
END:VEVENT
END:VCALENDAR