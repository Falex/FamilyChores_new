<h1>Belohnungen</h1>

<% for reward in @rewards %>
  <p>
    <%=h reward.title %>
  </p>
	<p>
    User: <%=h reward.user.login %>
  </p>
  <p>
    points: <%=h reward.points %>
  </p>
	<%= link_to 'Bearbeiten', [:edit, @calendar, reward] %>
	<%= link_to 'Löschen', [@calendar, reward], :confirm => 'Are you sure?', :method => :delete %>
  
<% end %>


